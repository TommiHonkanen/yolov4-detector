<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Gradient Overlay for better UI visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_top"
        android:layout_gravity="top" />

    <!-- Detection Overlay -->
    <io.github.tommihonkanen.yolov4detector.DetectionOverlayView
        android:id="@+id/detectionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Bar with Model Info -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/md_theme_surfaceContainer"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:alpha="0.95">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOLOv4 Detector"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/md_theme_onSurface"
                    android:textStyle="bold" />
                    
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model: "
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_onSurfaceVariant" />
                        
                    <TextView
                        android:id="@+id/currentModelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not loaded"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_primary"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />
                        
                </LinearLayout>
                
            </LinearLayout>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModels"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Models"
                android:textSize="12sp"
                app:icon="@drawable/ic_model"
                app:iconSize="16dp"
                app:iconTint="@color/md_theme_primary" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAbout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_info"
                app:iconSize="20dp"
                app:iconTint="@color/md_theme_onSurfaceVariant" />
                
        </LinearLayout>
        
    </com.google.android.material.card.MaterialCardView>

    <!-- Enhanced Stats Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statsCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/md_theme_surfaceContainer"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:alpha="0.9">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_speed"
                    android:tint="@color/md_theme_primary"
                    android:layout_marginEnd="6dp" />
                    
                <TextView
                    android:id="@+id/fpsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 FPS"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />
                    
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_timer"
                    android:tint="@color/md_theme_secondary"
                    android:layout_marginEnd="6dp" />
                    
                <TextView
                    android:id="@+id/inferenceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0ms"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    android:fontFamily="monospace" />
                    
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_detection"
                    android:tint="@color/md_theme_tertiary"
                    android:layout_marginEnd="6dp" />
                    
                <TextView
                    android:id="@+id/detectionCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 objects"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    android:fontFamily="monospace" />
                    
            </LinearLayout>
            
        </LinearLayout>
        
    </com.google.android.material.card.MaterialCardView>

    <!-- Threshold Controls Panel (slides in from right) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/thresholdPanel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="-280dp"
        app:cardBackgroundColor="@color/md_theme_surfaceContainer"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:alpha="0.95"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@android:color/transparent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detection Settings"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/md_theme_onSurface"
                android:layout_marginBottom="16dp" />
            
            <!-- Confidence Threshold -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence Threshold"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:layout_marginBottom="4dp" />
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                
                <SeekBar
                    android:id="@+id/confidenceSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="90"
                    android:progress="25"
                    android:progressTint="@color/md_theme_primary"
                    android:thumbTint="@color/md_theme_primary"
                    android:splitTrack="false"
                    android:clickable="true" />
                    
                <TextView
                    android:id="@+id/confidenceValue"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_primary"
                    android:textAlignment="textEnd"
                    android:layout_marginStart="8dp" />
                    
            </LinearLayout>
            
            <!-- NMS Threshold -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NMS Threshold"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:layout_marginBottom="4dp" />
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <SeekBar
                    android:id="@+id/nmsSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="90"
                    android:progress="45"
                    android:progressTint="@color/md_theme_primary"
                    android:thumbTint="@color/md_theme_primary"
                    android:splitTrack="false"
                    android:clickable="true" />
                    
                <TextView
                    android:id="@+id/nmsValue"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_primary"
                    android:textAlignment="textEnd"
                    android:layout_marginStart="8dp" />
                    
            </LinearLayout>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetThresholds"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Reset to Defaults"
                android:textColor="@color/md_theme_primary" />
            
        </LinearLayout>
        
    </com.google.android.material.card.MaterialCardView>

    <!-- Settings Toggle Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        app:fabSize="mini"
        app:backgroundTint="@color/md_theme_surfaceContainer"
        app:tint="@color/md_theme_onSurface"
        app:srcCompat="@drawable/ic_tune"
        app:elevation="4dp" />

    <!-- FAB Menu -->
    <LinearLayout
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="end">
        
        <!-- Flash FAB -->
        <LinearLayout
            android:id="@+id/flashFabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flash"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onSurface"
                android:background="@drawable/fab_label_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginEnd="8dp" />
                
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                app:backgroundTint="@color/md_theme_surfaceContainer"
                app:tint="@color/md_theme_onSurface"
                app:srcCompat="@drawable/ic_flash_off" />
                
        </LinearLayout>
        
        <!-- Flip Camera FAB -->
        <LinearLayout
            android:id="@+id/flipFabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flip Camera"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onSurface"
                android:background="@drawable/fab_label_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginEnd="8dp" />
                
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFlipCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                app:backgroundTint="@color/md_theme_surfaceContainer"
                app:tint="@color/md_theme_onSurface"
                app:srcCompat="@drawable/ic_camera_flip" />
                
        </LinearLayout>
        
        <!-- Main FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/md_theme_primary"
            app:tint="@color/md_theme_onPrimary"
            app:srcCompat="@android:drawable/ic_media_pause"
            app:fabSize="normal" />
            
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>